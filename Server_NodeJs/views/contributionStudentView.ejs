<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
   

          
    <title>Contribution View</title>
   
  </head>
  <body>
  
    <%- include('partials/header.ejs') %>

    <div id="wrapper">

      <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
          <h2>PRINCIPAL PANEL</h2>
        </div>
        <nav class="main-nav" role="navigation">
          <ul class="sidebar-nav unstyled list-hover-slide">
            
            <li >
              <a  href="/articleStudentView">MY ARTICLES</a>
            </li>
            <li >
              <a  href="/emploistempsProfView">EMPLOIS DE TEMPS</a>
            </li>
            <li class="active">
              <a  href="/contributionStudentView">MY CONTRIBUTION</a>
            </li>
            <li >
              <a  href="/documentsStudentView">DOCUMENTS</a>
            </li>
            <li >
              <a  href="/noteStudentView">MY GRADES</a>
            </li>
            <li >
              <a  href="/absenceStudentView">MY ABSENCES</a>
            </li>
          </ul>
          </nav>
      </aside>
      
      <div id="navbar-wrapper">
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <h3 style="padding-right: 730px;color: black;">Contributions  </h3>
              
            </div>
          </div>
        </nav>
      </div>
      <div class="container"  style="margin-top: 20px;">
        <input class="form-control" style="width: 50%;" id="myInput" type="text" placeholder="Search..">
             
                          <img data-toggle="modal" data-target="#exampleModalCenter" style="float: right;" src="/images/plus.png">
                          <br>
                          <table style="margin-top: 20px;" class="table table-striped table-class" id="main-table">
                            <thead>
                              <tr>
                                <th>Devoir Name</th>
                                <th>Action</th>
                              </tr>
                            </thead>
                            <tbody id="myTable">
                  
                              <% for(var i=0; i < json[1].length; i++) { %>
                                <tr>
                                  <td><%= json[1][i].name%></td>
                               
                                <td>  
                                  <a href="<%= json[1][i].path %>" target="_blank" class=" btn btn-primary"> DOWNLOAD</a> 
                                </td> </tr>
                              <%  }%>
                            </tbody>
                          </table style="margin-top: 20px;">
                        </div>

                       
                        
      <div class="container">
        <div class="form-group" style="float: right; width: 10%;">
          <!--		Show Numbers Of Rows 		-->
          <select class="form-control" name="state" id="maxRows">
            <option value="5000">Show ALL Rows</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="70">70</option>
            <option value="100">100</option>
          </select>

        </div>

        <div class='pagination-container'>
          <nav>
            <ul class="pagination">

              <li data-page="prev">
                <span>
                  < <span class="sr-only">(current)
                </span></span>
              </li>
              <!--	Here the JS Function Will Add the Rows -->
              <li data-page="next" id="prev">
                <span> > <span class="sr-only">(current)</span></span>
              </li>
            </ul>
          </nav>
        </div>

      </div>

  
               
                    <!-- Modal -->
                    
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Add Contribution</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">




          <form action="uploadContribution" method="post" enctype="multipart/form-data">
            <div style="margin-top: 50px; padding: 5%; background-color: #f3f3f3;">
              <div class="form-group">
                <input type="hidden" class="form-control" name="id_student" value="<%json[1].id_student%>"/>
              </div>
              <div class="form-group">
                <select name="id_dev" id="" >
                    <% 
                     for(var i=0; i < json[0].length; i++) { %>
                        <option value="<%= json[0][i].id %>" >Devoir: <%= json[0][i].name %> </option>
                        <% } %>                
                    </select>
              </div>
              <div class="form-group">
                <input type="file" class="form-control" name="pdfFile" placeholder="upload file *" required="required"/>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Add Contribution</button>
            </div>
    </form>    
    
    
    
    

        </div>


      </div>
    </div>
  </div>

                      
                 


       <!-- Button to Open the Modal -->
 
                        
                     

       <!-- basic modal -->
        
       
     

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <%- include('partials/footer.ejs') %>
    </body>
</html>