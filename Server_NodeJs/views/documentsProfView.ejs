<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
   

          
    <title>Documents View</title>
   
  </head>
  <body>
  
    <%- include('partials/headerP.ejs') %>

    <div id="wrapper">

      <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
          <h2>PROFESSOR PANEL</h2>
        </div>
        <nav class="main-nav" role="navigation">
        <ul class="sidebar-nav unstyled list-hover-slide">
          
          <li>
            <a  href="/circulaireProfView">CIRCULAIRE</a>
          </li>
          <li >
            <a  href="/generateProf">EMPLOIS DE TEMPS</a>
          </li>
          <li >
            <a  href="/studentProfView">STUDENTS INFOS</a>
          </li>
          <li class="active">
            <a  href="/documentsProfView">DOCUMENTS</a>
          </li>
          <li >
            <a  href="/noteProfView">GRADES</a>
          </li>          
          <li >
            <a  href="/ContributionView">CONTRIBUTIONS</a>
          </li>
          <li >
            <a  href="/demandesView">DEMANDES</a>
          </li>
          
            
        </ul>
        </nav>
      </aside>
      
      <div id="navbar-wrapper">
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <h3 style="padding-right: 730px;color: black;">Documents  </h3>
              
            </div>
          </div>
        </nav>
      </div>
      <div class="container"  style="margin-top: 20px;">
        <input class="form-control" style="width: 50%;" id="myInput" type="text" placeholder="Search..">
             
                          <img data-toggle="modal" data-target="#exampleModalCenter" style="float: right;" src="/images/plus.png">
                          <br>
                          <table style="margin-top: 20px;" class="table table-striped table-class" id="main-table">
                            <thead>
                              <tr>
                                <th>Document </th>
                                <th>Type</th>
                                <th>Date limite(pour les devoirs)</th>
                                <th>Action</th>
                              </tr>
                            </thead>
                            <tbody id="myTable">
                  
                              <% for(var i=0; i < json.length; i++) { %>
                                <tr>
                                  <td><%= json[i].name %></td>
                                  <td><%= json[i].type%></td>
                                  <td><%= json[i].posted_on%></td>
                               
                                <td>  
                                  <a href="<%= json[i].path %>" target="_blank" class=" btn btn-primary"> DOWNLOAD</a> 
                                </td> </tr>
                              <%  }%>
                            </tbody>
                          </table style="margin-top: 20px;">
                        </div>

                       
                        
      <div class="container">
        <div class="form-group" style="float: right; width: 10%;">
          <!--		Show Numbers Of Rows 		-->
          <select class="form-control" name="state" id="maxRows">
            <option value="5000">Show ALL Rows</option>
            <option value="5">5</option>
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="70">70</option>
            <option value="100">100</option>
          </select>

        </div>

        <div class='pagination-container'>
          <nav>
            <ul class="pagination">

              <li data-page="prev">
                <span>
                  < <span class="sr-only">(current)
                </span></span>
              </li>
              <!--	Here the JS Function Will Add the Rows -->
              <li data-page="next" id="prev">
                <span> > <span class="sr-only">(current)</span></span>
              </li>
            </ul>
          </nav>
        </div>

      </div>

  
               
                    <!-- Modal -->
                    
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Add Document</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">




          <form action="uploadDocument" method="post" enctype="multipart/form-data">
            <div style="margin-top: 50px; padding: 5%; background-color: #f3f3f3;">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Document name *" required="required"/>
                  </div>
                  <div class="form-group">
                    <input type="text" class="form-control" name="type" placeholder="Document type *" required="required"/>
                  </div>
                <input type="hidden"  name="id_prof"  required="required"/>
              <div class="form-group">
                <input type="date" class="form-control" name="posted_on" placeholder="Date limite " />
              </div>
              <div class="form-group">
                <input type="file" class="form-control" name="pdfFile" placeholder="upload file *" required="required"/>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Add Document</button>
            </div>
    </form>    
    
    
    
    

        </div>


      </div>
    </div>
  </div>

                      
                 


       <!-- Button to Open the Modal -->
 
                        
                     

