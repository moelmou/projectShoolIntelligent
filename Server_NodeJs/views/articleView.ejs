      <div class="container"  style="margin-top: 20px;">
             
                          <br>
                          

                          <div class="post">
                            <% for (var i = 0; i < json.length; i++) { %>
                              <div class="article" style="background-color: #fff; padding: 10px; margin-bottom: 10px; border-radius: 5px; box-shadow: 0px 0px 5px #ccc;">
                                <div class="post-body" style="padding: 10px;">
                                  <%= json[i].article_body %>
                                </div>
                                <h6 style="margin: 0; padding: 10px;">posted by: <%= json[i].name %></h6>
                                <p style="margin: 0; padding: 10px;"> <i class="fa fa-italic" aria-hidden="true">posted on: <%= json[i].posted_on%></i></p>
                              </div>
                              <form method="post" action="/updateValide %>">
                                <div class="post-validation" style="display: flex; align-items: center; padding: 10px;">
                                  <input type="hidden" name="id" value="<%= json[i].id %>"/>
                                  <input type="submit" value="Accept"  style="margin-right: 10px; padding:5px 15px;  background-color: green; color:white; border-radius: 5px;">
                                  <input type="submit" value="Refuse" style="margin-right: 10px; padding:5px 15px;  background-color: red; color:white; border-radius: 5px;">
                                </div>
                              </form>
                              <% } %>
                          </div>
                          

                     

                       
 
                        
      
  
 

                      
                 




      
                          


